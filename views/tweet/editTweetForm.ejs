<div class="d-flex flex-column ">
    <form method="post" action="/edittweet/<%= tweet.id %>">
        <div class="d-flex flex-column align-items-end ">
            <div class="w-100 mb-3">
                <textarea class="edit-tweet form-control text-bg-dark light-placeholder" id="edittweet" name="edittweet"
                    placeholder="Mi történik épp most?"><%= tweet.text %></textarea>
            </div>
            <div class="d-flex align-content-end ">
                <button type="submit" id="tweetModBtn" class="tweet-edit-button btn btn-primary rounded-pill me-2">
                    Tweet módosítása</button>
                <a href="/" class="ms-2">
                    <button type="button" class=" btn btn-warning rounded-pill">Mégse</button>
                </a>
            </div>
        </div>
    </form>
    <hr>
</div>